# Environment Variables for Porakhela Backend
# Copy this file to .env and fill in the actual values

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=porakhela
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Applink API Configuration
APPLINK_BASE_URL=https://api.applink.com/v1/
APPLINK_API_KEY=your-applink-api-key
APPLINK_CLIENT_ID=your-applink-client-id
APPLINK_CLIENT_SECRET=your-applink-client-secret

# Gamification Settings
PORAPOINTS_PER_LESSON=10
STREAK_BONUS_MULTIPLIER=1.5
DAILY_LOGIN_BONUS=5

# Logging
DJANGO_LOG_LEVEL=INFO