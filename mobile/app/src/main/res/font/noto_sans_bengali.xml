<?xml version="1.0" encoding="utf-8"?>
<!-- Bengali font family configuration for Porakhela -->
<!-- Noto Sans Bengali fonts should be downloaded from Google Fonts and placed in res/font/ -->

<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/noto_sans_bengali_regular" />
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/noto_sans_bengali_medium" />
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/noto_sans_bengali_semibold" />
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/noto_sans_bengali_bold" />
</font-family>